@model IEnumerable<Wikipages.Models.Category>

<html>
<head>
    <title>Wikipages</title>
</head>
<body>
    <h2>Categories</h2>
    <ul>
        @foreach (var category in Model)
        {
            <li><strong>@Html.DisplayFor(modelCategory => category.Description)</strong> | @Html.ActionLink("Details", "Details", new { id = category.Id }) | @Html.ActionLink("Edit", "Edit", new { id = category.Id }) | @Html.ActionLink("Delete", "Delete", new { id = category.Id })</li>
        }
    </ul>

    <p>@Html.ActionLink("Add new category", "Create")</p>
    <p>@Html.ActionLink("Back to Home", "Index", "Home", null)</p>
</body>
</html>